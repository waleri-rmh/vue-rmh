@import '~styles/variables'

.rmh-tab-header
  display: flex
  position: relative
  align-items: center
  color: rmh-color-default-lighter
  cursor: pointer
  transition: .2s ease

  .rmh-tab-label
    display: flex
    align-items: center
    padding: 0 20px
    height: 100%
    overflow: hidden

  &:after
    position: absolute
    content: ''
    height: 2px
    background: rmh-color-primary
    width: 0%
    bottom: -2px
    left: 50%
    transition: .3s ease

  &.active
    color: rmh-color-primary

    &:after
      left: 0%
      width: 100%
