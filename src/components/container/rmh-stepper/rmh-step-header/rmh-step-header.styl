@import '~styles/variables'

.rmh-step-header
  flex: 1
  display: flex
  position: relative
  color: rmh-color-default-lighter
  cursor: pointer
  transition: .2s ease
  min-height: 100%
  justify-content: center

  .rmh-step-label
    padding: 2px 5px
    overflow: hidden
    background: #eee
    border-radius: 3px
    margin-top: 20px
    border: 1px solid #ddd

    &:before
      position: absolute
      content: ''
      height: 10px
      width: 10px
      left: 50%
      margin-left: -5px
      top: 15px
      background: rmh-color-grey-lighter
      transform: rotate(-45deg)
      z-index: 100

  &:before
    position: absolute
    content: ''
    height: 5px
    background: rmh-color-grey-lighter
    width: 100%
    top: 10px
    margin-top: -2.5px
    transition: .3s ease

  &:after
    position: absolute
    content: ''
    height: 20px
    width: 20px
    border-radius: 50%
    background: rmh-color-grey
    transition: .3s ease

  &.active
    color: rmh-color-primary

    &:before, &:after
      background: rmh-color-primary
